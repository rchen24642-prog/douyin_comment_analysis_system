<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.dao.CommentDao">

    <!-- 根据评论ID查询 -->
    <select id="selectById" resultType="com.example.springboot.entity.Comment">
        SELECT * FROM comment
        WHERE id = #{id}
    </select>

    <!-- 根据项目ID查询评论列表 -->
    <select id="selectByProjectId" resultType="com.example.springboot.entity.Comment">
        SELECT * FROM comment
        WHERE pid = #{pid}
    </select>

    <!-- 根据父评论ID查询二级评论 -->
    <select id="selectByParentCid" resultType="com.example.springboot.entity.Comment">
        SELECT * FROM comment
        WHERE parent_cid = #{parentCid}
    </select>

</mapper>
